<mui:ModernWindow x:Name="addItem_Window" x:Class="Dota_Toolbox.Windows.AddItemWindow"
				  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
				  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
				  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
				  mc:Ignorable="d" 
				  d:DesignHeight="300" d:DesignWidth="300"
				  Title="Add Item"
				  Style="{StaticResource BlankWindow}"
				  Width="600" Height="405" MinWidth="600" MinHeight="405" MaxHeight="405" Loaded="WindowLoaded">
	<Grid>
		<ScrollViewer>
			<StackPanel>
				<!--Base-->
				<Grid Margin="0 0 0 4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="3*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center" Text="Name:" />
					<TextBox   Grid.Column="1" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Ex: item_my_new_item" x:Name="name"/>
					<TextBlock Grid.Column="2" Margin="0 0 4 0" VerticalAlignment="Center" Text="ID:"/>
					<TextBox   Grid.Column="3" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Unique number up from 0. Ex: 3678" x:Name="id" />
				</Grid>
				<Separator Height="15"/>
				<!--General-->
				<Grid Margin="0 0 0 4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<Button    Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center" Content="Ability Behaviors" ToolTip="Fix Tooltip." Click="Behaviors_Click"/>
					<TextBlock Grid.Column="1" Margin="0 0 4 0" VerticalAlignment="Center" Text="Target Team:"/>
					<ComboBox  Grid.Column="2" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Fix Tooltip." x:Name="abilityUnitTargetTeam"/>
					<Button    Grid.Column="3" Margin="0 0 4 0" VerticalAlignment="Center" Content="Target Types" ToolTip="Fix Tooltip." Click="TargetTypes_Click"/>
					<Button    Grid.Column="4" Margin="0 0 4 0" VerticalAlignment="Center" Content="Target Flags" ToolTip="Fix Tooltip." Click="TargetFlags_Click"/>
				</Grid>
				<Grid Margin="0 0 0 4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="2*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center" Text="Model:"/>
					<TextBox   Grid.Column="1" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Ex: models/props_gameplay/boots_of_speed.mdl" x:Name="model"/>
					<TextBlock Grid.Column="2" Margin="0 0 4 0" VerticalAlignment="Center" Text="Base Class:"/>
					<ComboBox  Grid.Column="3" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Fix Tooltip." x:Name="baseClass" IsEditable="True"/>
				</Grid>
				<Grid Margin="0 0 0 4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center" Text="Texture Name:"/>
					<TextBox   Grid.Column="1" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Ex: item_greater_clarity" x:Name="abilityTextureName"/>
					<TextBlock Grid.Column="2" Margin="0 0 4 0" VerticalAlignment="Center" Text="Killable:"/>
					<CheckBox  Grid.Column="3" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Can you destroy it on the ground?" x:Name="itemKillable"/>
				</Grid>
				<Separator Height="15"/>
				<!--Stats-->
				<Grid Margin="0 0 0 4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center" Text="Cast Range:"/>
					<TextBox   Grid.Column="1" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Ex: item_my_new_item" x:Name="abilityCastRange"/>
					<TextBlock Grid.Column="2" Margin="0 0 4 0" VerticalAlignment="Center" Text="Cast Point:"/>
					<TextBox   Grid.Column="3" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Unique number up from 0. Ex: 3678" x:Name="abilityCastPoint"/>
				</Grid>
				<Separator Height="15"/>
				<!--Item Info-->
				<Grid Margin="0 0 0 4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="2*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Number up from 0. Ex: 500" Text="Gold Cost:" />
					<TextBox   Grid.Column="1" Margin="0 0 4 0" VerticalAlignment="Center" x:Name="itemCost"/>
					<Button    Grid.Column="2" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Choose every coherent tags." Content="Shop Tags" Click="ShopTags_Click"/>
					<TextBlock Grid.Column="3" Margin="0 0 4 0" VerticalAlignment="Center" Text="Quality:" />
					<ComboBox  Grid.Column="4" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Fix Tooltip." x:Name="itemQuality"/>
					<TextBlock Grid.Column="5" Margin="0 0 4 0" VerticalAlignment="Center" Text="Stackable:"/>
					<CheckBox  Grid.Column="6" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Is it stackable?" x:Name="itemStackable"/>
				</Grid>
				<Grid Margin="0 0 0 4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="4*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center" Text="Shareability:"/>
					<ComboBox  Grid.Column="1" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Fix Tooltip." x:Name="itemShareability"/>
					<TextBlock Grid.Column="2" Margin="0 0 4 0" VerticalAlignment="Center" Text="Permanent:"/>
					<CheckBox  Grid.Column="3" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Destroyed on use?" x:Name="itemPermanent"/>
					<TextBlock Grid.Column="4" Margin="0 0 4 0" VerticalAlignment="Center" Text="Charges:"/>
					<TextBox   Grid.Column="5" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Number up from 0. Ex: 15" x:Name="itemInitialCharges" Text="0"/>
					<TextBlock Grid.Column="6" Margin="0 0 4 0" VerticalAlignment="Center" Text="Sideshop:"/>
					<CheckBox  Grid.Column="7" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Is it available in the SideShop?" x:Name="sideShop"/>
				</Grid>
				<Separator Height="15"/>
				<!--Misc-->
				<Grid Margin="0 0 0 4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center" Text="Stock Initial:"/>
					<TextBox   Grid.Column="1" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Fix Tooltip." x:Name="itemStockInitial"/>
					<TextBlock Grid.Column="2" Margin="0 0 4 0" VerticalAlignment="Center" Text="Stock Max:"/>
					<TextBox   Grid.Column="3" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Fix Tooltip." x:Name="itemStockMax"/>
					<TextBlock Grid.Column="4" Margin="0 0 4 0" VerticalAlignment="Center" Text="Stock Time:"/>
					<TextBox   Grid.Column="5" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Fix Tooltip." x:Name="itemStockTime"/>
					<TextBlock Grid.Column="6" Margin="0 0 4 0" VerticalAlignment="Center" Text="Support:"/>
					<CheckBox  Grid.Column="7" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Fix Tooltip." x:Name="itemSupport"/>
					<Button    Grid.Column="8" Margin="0 0 4 0" VerticalAlignment="Center" ToolTip="Fix Tooltip." Content="Item Declarations"  Click="Declarations_Click"/>
				</Grid>
				<Separator Height="15"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Button Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center" Content="ok" Click="OK_Click"/>
					<Button Grid.Column="1" Margin="0 0 4 0" VerticalAlignment="Center" Content="cancel" Click="Cancel_Click"/>
				</Grid>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</mui:ModernWindow>
